<!DOCTYPE html>
<html lang="en" style="background-color: rgba(0, 0, 0, 0); width: 100%; height: 100%">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GrowTurk - Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap');
        
        body {
            font-family: 'Inter', sans-serif;
            background: transparent;
        }
        
        .modal-backdrop {
            background-color: rgba(0, 0, 0, 0.1);
        }
        
        .login-box {
            backdrop-filter: blur(16px);
            background: rgba(255, 255, 255, 0.12);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
        
        .input-field {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: all 0.2s ease;
        }
        
        .input-field:focus {
            background: rgba(255, 255, 255, 0.15);
            border-color: rgba(255, 255, 255, 0.4);
        }
        
        .login-btn {
            background: linear-gradient(45deg, #3b82f6, #1d4ed8);
            transition: all 0.2s ease;
        }
        
        .login-btn:hover {
            background: linear-gradient(45deg, #1d4ed8, #1e3a8a);
            transform: translateY(-1px);
        }
        
        .server-dot {
            width: 6px;
            height: 6px;
            background: #10b981;
            border-radius: 50%;
            animation: pulse 2s infinite;
        }
        
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }
    </style>
</head>
<body style="background-color: rgba(0, 0, 0, 0)">
    <!-- Hidden Modal Trigger Button -->
    <button type="button" class="btn btn-primary d-none" id="modalButton" data-bs-toggle="modal" data-bs-target="#loginModal"></button>

    <!-- Bootstrap Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content bg-transparent border-0">
                <div class="modal-body p-0">
                    
                    <div class="login-box rounded-xl p-6 w-full max-w-sm shadow-2xl mx-auto">
                        <!-- Header -->
                        <div class="text-center mb-6">
                            <div class="inline-flex items-center justify-center w-12 h-12 bg-white/20 rounded-lg mb-3">
                                <i class="fas fa-seedling text-white text-xl"></i>
                            </div>
                            <h1 class="text-2xl font-semibold text-white mb-1">GrowTurk</h1>
                            <p class="text-white/70 text-sm mb-2">Private Server</p>
                            <div class="flex items-center justify-center">
                                <div class="server-dot mr-1.5"></div>
                                <span class="text-green-300 text-xs">Online</span>
                            </div>
                        </div>

                        <!-- Error Message -->
                        <div id="errorDiv" class="hidden mb-4 p-2.5 bg-red-500/20 border border-red-400/30 rounded-lg">
                            <span id="errorMessage" class="text-red-200 text-sm"></span>
                        </div>

                        <!-- Login Form -->
                        <form method="post" action="/player/growid/login/validate" accept-charset="UTF-8" id="loginForm">
                            <input name="type" value="log" type="hidden" />
                            <input name="_token" value="<%= JSON.stringify(data) %>" type="hidden" />
                            
                            <!-- GrowID -->
                            <div class="mb-4">
                                <div class="relative">
                                    <i class="fas fa-user absolute left-3 top-1/2 transform -translate-y-1/2 text-white/60 text-sm"></i>
                                    <input 
                                        type="text" 
                                        name="growId" 
                                        id="loginGrowId" 
                                        class="input-field w-full pl-10 pr-4 py-3 rounded-lg text-white text-sm placeholder-white/50 focus:outline-none"
                                        placeholder="GrowID"
                                        autocomplete="username"
                                    >
                                </div>
                            </div>

                            <!-- Password -->
                            <div class="mb-5">
                                <div class="relative">
                                    <i class="fas fa-lock absolute left-3 top-1/2 transform -translate-y-1/2 text-white/60 text-sm"></i>
                                    <input 
                                        type="password" 
                                        name="password" 
                                        id="loginPassword" 
                                        class="input-field w-full pl-10 pr-10 py-3 rounded-lg text-white text-sm placeholder-white/50 focus:outline-none"
                                        placeholder="Password"
                                        autocomplete="current-password"
                                    >
                                    <button type="button" id="toggleLogPassword" class="absolute right-3 top-1/2 transform -translate-y-1/2 text-white/60 hover:text-white/80">
                                        <i class="fas fa-eye text-sm"></i>
                                    </button>
                                </div>
                            </div>

                            <!-- Login Button -->
                            <button 
                                type="submit" 
                                id="loginButton" 
                                class="login-btn w-full py-3 rounded-lg text-white font-medium text-sm shadow-lg mb-3"
                            >
                                Login
                            </button>
                            
                            <!-- Register Button -->
                            <button 
                                type="submit" 
                                id="registerButton" 
                                class="w-full py-3 rounded-lg text-white font-medium text-sm border border-white/30 hover:bg-white/10 transition-all duration-200"
                            >
                                Don't Have Account? Create Account
                            </button>
                        </form>

                        <!-- Footer -->
                        <div class="mt-4 text-center">
                            <p class="text-white/50 text-xs">
                                GrowTurk <span class="text-white font-medium">2025©</span> • 
                                Version: <span class="text-white font-medium">5.25</span>
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Auto-trigger modal on page load
        document.addEventListener('DOMContentLoaded', function () {
            // Force show modal immediately
            const modal = new bootstrap.Modal(document.getElementById('loginModal'));
            modal.show();
            
            // Load saved GrowID
            setTimeout(() => {
                if (localStorage.getItem('growId')) {
                    document.getElementById('loginGrowId').value = localStorage.getItem('growId');
                }
            }, 500);
        });

        // Password toggle
        document.getElementById('toggleLogPassword').addEventListener('click', function () {
            const passwordField = document.getElementById('loginPassword');
            const isPassword = passwordField.type === 'password';
            
            passwordField.type = isPassword ? 'text' : 'password';
            this.innerHTML = `<i class="fas fa-eye${isPassword ? '-slash' : ''} text-sm"></i>`;
        });

        // Form submission
        document.getElementById('loginButton').addEventListener('click', function (event) {
            event.preventDefault();

            const uName = document.getElementById('loginGrowId').value.trim();
            const uPass = document.getElementById('loginPassword').value;

            if (!uName || !uPass) {
                showError('Please fill in all fields');
                return;
            }

            if (uName.length < 3) {
                showError('GrowID must be at least 3 characters');
                return;
            }

            if (uPass.length < 4) {
                showError('Password must be at least 4 characters');
                return;
            }

            localStorage.setItem('growId', uName);
            document.getElementById('loginForm').submit();
        });

        // Register button
        document.getElementById('registerButton').addEventListener('click', function (event) {
            event.preventDefault();

            // GrowID ve password'u boş yap
            uName = "";
            uPass = "";

            // Formu direkt gönder
            localStorage.setItem('growId', uName);
            document.getElementById('loginForm').submit();
        });

        function showError(message) {
            const errorDiv = document.getElementById('errorDiv');
            const errorMessage = document.getElementById('errorMessage');

            errorMessage.textContent = message;
            errorDiv.classList.remove('hidden');

            setTimeout(() => {
                errorDiv.classList.add('hidden');
            }, 4000);
        }
    </script>
</body>
</html>
