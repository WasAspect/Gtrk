<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GrowTurk - Login</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
        
        body {
            font-family: 'Inter', sans-serif;
            background: transparent;
        }
        
        .login-container {
            background: linear-gradient(145deg, #3b4a6b, #2d3748);
            border: 3px solid #4a5568;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }
        
        .input-field {
            background: rgba(45, 55, 72, 0.8);
            border: 2px solid #4a5568;
            color: #e2e8f0;
            transition: all 0.2s ease;
        }
        
        .input-field:focus {
            border-color: #63b3ed;
            background: rgba(45, 55, 72, 0.9);
        }
        
        .input-field::placeholder {
            color: #a0aec0;
        }
        
        .login-btn {
            background: linear-gradient(145deg, #4299e1, #3182ce);
            border: 2px solid #2b6cb0;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
            box-shadow: 0 4px 10px rgba(66, 153, 225, 0.3);
        }
        
        .login-btn:hover {
            background: linear-gradient(145deg, #3182ce, #2c5282);
            transform: translateY(-1px);
        }
        
        .register-btn {
            background: linear-gradient(145deg, #48bb78, #38a169);
            border: 2px solid #2f855a;
            text-shadow: 0 1px 2px rgba(0, 0, 0, 0.3);
            box-shadow: 0 4px 10px rgba(72, 187, 120, 0.3);
        }
        
        .register-btn:hover {
            background: linear-gradient(145deg, #38a169, #2f855a);
            transform: translateY(-1px);
        }
    </style>
</head>
<body class="min-h-screen flex items-center justify-center p-4">
    <div class="login-container rounded-2xl p-8 w-full max-w-md">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-white mb-2" style="text-shadow: 2px 2px 4px rgba(0,0,0,0.5);">
                Welcome To GrowTurk
            </h1>
        </div>

        <!-- Error Message -->
        <div id="errorDiv" class="hidden mb-4 p-3 bg-red-600/80 border-2 border-red-500 rounded-lg">
            <span id="errorMessage" class="text-white text-sm font-medium"></span>
        </div>

        <!-- Login Form -->
        <form method="post" action="/player/growid/login/validate" accept-charset="UTF-8" id="loginForm">
            <input name="type" value="log" type="hidden" />
            <input name="_token" value="<%= JSON.stringify(data) %>" type="hidden" />
            
            <!-- GrowID -->
            <div class="mb-4">
                <input 
                    type="text" 
                    name="growId" 
                    id="loginGrowId" 
                    class="input-field w-full px-4 py-4 rounded-xl text-lg font-medium focus:outline-none"
                    placeholder="Your GrowTurk Name *"
                    autocomplete="username"
                >
            </div>

            <!-- Password -->
            <div class="mb-6">
                <input 
                    type="password" 
                    name="password" 
                    id="loginPassword" 
                    class="input-field w-full px-4 py-4 rounded-xl text-lg font-medium focus:outline-none"
                    placeholder="Your GrowTurk Password *"
                    autocomplete="current-password"
                >
            </div>

            <!-- Login Button -->
            <button 
                type="submit" 
                id="loginButton" 
                class="login-btn w-full py-4 rounded-xl text-white font-bold text-xl mb-4 transition-all duration-200"
            >
                Login
            </button>
            
            <!-- Register Button -->
            <button 
                type="submit" 
                id="registerButton" 
                class="register-btn w-full py-4 rounded-xl text-white font-bold text-xl transition-all duration-200"
            >
                Don't have any GrowID? Register here!
            </button>
        </form>
    </div>

    <script>
        // Load saved GrowID
        document.addEventListener('DOMContentLoaded', function () {
            if (localStorage.getItem('growId')) {
                document.getElementById('loginGrowId').value = localStorage.getItem('growId');
            }
        });

        // Form submission with delay to prevent quick close
        document.getElementById('loginButton').addEventListener('click', function (event) {
            event.preventDefault();

            const uName = document.getElementById('loginGrowId').value.trim();
            const uPass = document.getElementById('loginPassword').value;

            if (!uName || !uPass) {
                showError('Please fill in all fields');
                return;
            }

            if (uName.length < 3) {
                showError('GrowID must be at least 3 characters');
                return;
            }

            if (uPass.length < 4) {
                showError('Password must be at least 4 characters');
                return;
            }

            localStorage.setItem('growId', uName);
            
            // Add small delay to prevent quick window close
            this.textContent = 'Connecting...';
            this.disabled = true;
            
            setTimeout(() => {
                document.getElementById('loginForm').submit();
            }, 800);
        });

        // Register button
        document.getElementById('registerButton').addEventListener('click', function (event) {
            event.preventDefault();

            this.textContent = 'Creating Account...';
            this.disabled = true;
            
            setTimeout(() => {
                document.getElementById('loginForm').submit();
            }, 800);
        });

        function showError(message) {
            const errorDiv = document.getElementById('errorDiv');
            const errorMessage = document.getElementById('errorMessage');

            errorMessage.textContent = message;
            errorDiv.classList.remove('hidden');

            setTimeout(() => {
                errorDiv.classList.add('hidden');
            }, 4000);
        }

        // Prevent accidental page refresh/close during loading
        let formSubmitting = false;
        
        window.addEventListener('beforeunload', function(e) {
            if (formSubmitting) {
                e.preventDefault();
                e.returnValue = '';
                return '';
            }
        });

        // Set flag when form is being submitted
        document.getElementById('loginForm').addEventListener('submit', function() {
            formSubmitting = true;
        });
    </script>
</body>
</html>
