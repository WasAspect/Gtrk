<!DOCTYPE html>
<html
    lang="en"
    style="background-color: rgba(0, 0, 0, 0); width: 100%; height: 100%"
>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>GrowBest Player Support</title>
        <link
            rel="icon"
            type="image/png"
            href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/images/growtopia.ico"
            sizes="16x16"
        />
        <!-- include bootstrap and custom  css -->
        <link
            media="all"
            rel="stylesheet"
            href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/css/faq-main.css"
        />
        <link
            media="all"
            rel="stylesheet"
            href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/css/shop-custom.css"
        />
        <link
            media="all"
            rel="stylesheet"
            href="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/assets/css/ingame-custom.css"
        />
        <style>
            .modal-backdrop {
                background-color: rgba(0, 0, 0, 0.1);
            }
            .modal-backdrop + div {
                overflow: auto;
            }
            .modal-body,
            .content {
                padding: 0;
            }
            .server-field {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                border: 2px solid #4a5568;
                color: white;
                font-weight: bold;
            }
            .server-field::placeholder {
                color: #cbd5e0;
                font-weight: normal;
            }
        </style>
    </head>
    <body style="background-color: rgba(0, 0, 0, 0)">
        <button
            type="button"
            class="btn btn-primary hidden"
            data-toggle="modal"
            id="modalButton"
            data-target="#modalShow"
            data-backdrop="static"
            data-keyboard="false"
        ></button>
        <div class="content">
            <section class="common-box">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 col-sm-12">
                            <div class="row">
                                <div
                                    class="modal fade product-list-popup"
                                    id="modalShow"
                                    tabindex="-1"
                                    role="dialog"
                                    aria-hidden="false"
                                >
                                    <div
                                        class="modal-dialog modal-dialog-centered"
                                        role="document"
                                    >
                                        <div class="modal-content">
                                            <div class="modal-body">
                                                <div class="content">
                                                    <section class="common-box">
                                                        <div class="container">
                                                            <div
                                                                class="section-title center-align"
                                                            >
                                                                <h2>
                                                                    Welcome To GrowBest
                                                                </h2>
                                                                <p style="color: #667eea; font-weight: bold;">
                                                                    🚀 Connect to any GTPS server instantly!
                                                                </p>
                                                            </div>
                                                            <div
                                                                class="row div-content-center"
                                                            >
                                                                <div
                                                                    class="col-md-12 col-sm-12"
                                                                >
                                                                    <form
                                                                        method="POST"
                                                                        action="/player/growid/login/validate"
                                                                        accept-charset="UTF-8"
                                                                        class=""
                                                                        role="form"
                                                                        required="required"
                                                                        autocomplete="off"
                                                                    >
                                                                        <input
                                                                            name="_token"
                                                                            type="hidden"
                                                                            value=""
                                                                        />
                                                                        
                                                                        <!-- SERVER NAME FIELD - EN ÜSTTE -->
                                                                        <div class="form-group">
                                                                            <label for="serverName" style="color: #667eea; font-weight: bold; margin-bottom: 8px;">
                                                                                🌟 Server Name (Required)
                                                                            </label>
                                                                            <input
                                                                                id="serverName"
                                                                                class="form-control grow-text server-field"
                                                                                placeholder="Enter server name (e.g. GrowBest, Znc, TestServer) *"
                                                                                name="serverName"
                                                                                type="text"
                                                                                required
                                                                                style="margin-bottom: 15px;"
                                                                            />
                                                                            <small style="color: #718096;">
                                                                                💡 This determines which server you'll connect to
                                                                            </small>
                                                                        </div>

                                                                        <!-- GROWID FIELD -->
                                                                        <div class="form-group">
                                                                            <input
                                                                                id="login-name"
                                                                                class="form-control grow-text"
                                                                                placeholder="Your GrowID *"
                                                                                name="growId"
                                                                                type="text"
                                                                            />
                                                                        </div>
                                                                        
                                                                        <!-- PASSWORD FIELD -->
                                                                        <div class="form-group">
                                                                            <input
                                                                                id="password"
                                                                                class="form-control grow-text"
                                                                                placeholder="Your Password *"
                                                                                name="password"
                                                                                type="password"
                                                                                value=""
                                                                            />
                                                                        </div>
                                                                        
                                                                        <!-- LOGIN BUTTON -->
                                                                        <div class="form-group text-center">
                                                                            <input
                                                                                class="btn btn-lg btn-primary grow-button"
                                                                                type="submit"
                                                                                value="🚀 Connect to Server"
                                                                                style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border: none; font-weight: bold;"
                                                                            />
                                                                        </div>
                                                                        
                                                                        <!-- INFO BOX -->
                                                                        <div style="background: #f7fafc; border: 2px solid #e2e8f0; border-radius: 8px; padding: 15px; margin-top: 20px;">
                                                                            <h4 style="color: #2d3748; margin-bottom: 10px;">📋 How to use:</h4>
                                                                            <ul style="color: #4a5568; margin: 0; padding-left: 20px;">
                                                                                <li>Enter the <strong>server name</strong> you want to connect to</li>
                                                                                <li>Enter your <strong>GrowID</strong> and <strong>Password</strong></li>
                                                                                <li>Click connect and you'll be redirected to that server!</li>
                                                                            </ul>
                                                                        </div>
                                                                    </form>
                                                                    
                                                                    <!-- REGISTER FORM -->
                                                                    <form
                                                                        method="POST"
                                                                        action="/player/growid/register"
                                                                        accept-charset="UTF-8"
                                                                        class=""
                                                                        role="form"
                                                                        style="margin-top: 20px;"
                                                                    >
                                                                        <input name="_token" type="hidden" value=""/> 
                                                                        <input name="growId" type="hidden" value=""/> 
                                                                        <input name="password" type="hidden" value=""/>
                                                                        <input
                                                                            class="btn btn-lg btn-secondary grow-button"
                                                                            type="submit"
                                                                            value="📝 Don't have a GrowID? Register here!"
                                                                            style="width: 100%; background: #718096; border: none;"
                                                                        />
                                                                    </form>
                                                        </div>
                                                            </div>
                                                        </div>
                                                    </section>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <script src="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/vendors/jquery/jquery-2.1.4.min.js"></script>
        <script src="https://s3.eu-west-1.amazonaws.com/cdn.growtopiagame.com/website/resources/vendors/bootstrap/javascripts/bootstrap.min.js"></script>
        <script>
            let clicked = false;
            $('a').click(function () {
                if (clicked === false) {
                    clicked = true;
                    return true;
                }
                $(this).attr('onclick', 'return false;');
            });
            
            $('document').ready(function () {
                // Security measures
                document.onkeydown = e => {
                    if (e.key == 123 || e.key == 'F12') e.preventDefault();
                    if (e.ctrlKey && e.shiftKey && (e.key == 'I' || e.key == 'C' || e.key == 'J')) e.preventDefault();
                    if (e.ctrlKey && (e.key == 'I' || e.key == 'U')) e.preventDefault();
                };
                
                $('#modalButton').trigger('click');
                
                $('.close').on('click', function () {
                    window.location = '/player/validate/close';
                });
                
                // Auto-save server name
                $('#serverName').on('input', function() {
                    localStorage.setItem('lastServerName', $(this).val());
                });
                
                // Load saved server name
                if (localStorage.getItem('lastServerName')) {
                    $('#serverName').val(localStorage.getItem('lastServerName'));
                }
                
                // Load saved GrowID
                if (localStorage.getItem('growId')) {
                    $('#login-name').val(localStorage.getItem('growId'));
                }
                
                // Form validation
                $('form').first().on('submit', function(e) {
                    const serverName = $('#serverName').val().trim();
                    const growId = $('#login-name').val().trim();
                    const password = $('#password').val().trim();
                    
                    if (!serverName) {
                        alert('⚠️ Please enter a server name!');
                        e.preventDefault();
                        return false;
                    }
                    
                    if (!growId || !password) {
                        alert('⚠️ Please enter both GrowID and Password!');
                        e.preventDefault();
                        return false;
                    }
                    
                    if (growId.length < 3) {
                        alert('⚠️ GrowID must be at least 3 characters long!');
                        e.preventDefault();
                        return false;
                    }
                    
                    // Save GrowID for next time
                    localStorage.setItem('growId', growId);
                    
                    // Show loading message
                    $(this).find('input[type="submit"]').val('🔄 Connecting...').prop('disabled', true);
                });
                
                var observer = new MutationObserver(function (mutations) {
                    mutations.forEach(function (mutation) {
                        for (var i = 0; i < mutation.addedNodes.length; i++) {
                            if (mutation.addedNodes[i].tagName == 'DIV') {
                                var thediv = mutation.addedNodes[i];
                                var sw = window.screen.width;
                                if (sw < 667) {
                                    $(thediv).css({
                                        transform: 'scale(0.75)',
                                        'transform-origin': '0 0',
                                        '-webkit-transform': 'scale(0.75)',
                                        '-webkit-transform-origin': '0 0',
                                        overflow: 'auto',
                                    });
                                }
                            }
                        }
                    });
                });
                observer.observe(document.body, {
                    attributes: false,
                    childList: true,
                    characterData: false,
                });
            });
        </script>
    </body>
</html>
